{
	"working_folder":"build/",
    "src_folder":"",
	"project_name":"RBuild",
	"project_binary":"RBuild",
	"compiler_all":"gcc",
	"linker":"gcc",
	"targets":{
		"common":{
			"sources":[
                {
                    "name":"src",
                    "type":"exclude",
                    "exclude_list":[
                    ],
                }
			],
			"flags_c_cpp":[
				"-Iinclude",
                "-Wshadow",
                "-Winit-self",
                "-Wundef",
                "-Wunreachable-code",
                "-Wmissing-declarations",
                "-Wmain",
                "-Wall",
                "-Werror=return-type",
                "-Werror=suggest-override",
			],
			"flags_c":[
				"-std=c2x"
			],
			"flags_cpp":[
				"-std=c++20",
                "-fexceptions",
                "-Wnon-virtual-dtor",
                "-Wpessimizing-move",
                "-Wold-style-cast",
                "-Wredundant-move"
			],
			"include_only":true
		},
		"release":{
			"include":[
				"common"
			],
            "defines_c_cpp":[
                "-DNDEBUG"
            ],
			"flags_c_cpp":[
				"-O2"
			],
			"linker_flags":[
				"-s"
			]
		},
		"debug":{
			"include":[
				"common"
			],
            "defines_c_cpp":[
                "-DDEBUG"
            ],
			"flags_c_cpp":[
				"-g"
			]
		},
	},
	"targets_default":"all"
}
